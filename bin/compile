#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -e

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

function set_env_var() {
    ENV_VAR_NAME=$1
    ENV_VAR_VALUE=$2
    echo -n "$ENV_VAR_VALUE" > $ENV_DIR/$ENV_VAR_NAME
    echo "$ENV_VAR_NAME = $ENV_VAR_VALUE"
}

if [ -d "$BUILD_DIR/.apt/usr/include" ]; then
    find $BUILD_DIR/.apt/usr/include -type f -follow -print
fi

set_env_var "BUNDLE_BUILD__CHARLOCK_HOLMES" "--with-icu-lib=\"$BUILD_DIR/.apt/usr/lib\" --with-icu-include=\"$BUILD_DIR/.apt/usr/include/x86_64-linux-gnu\""
